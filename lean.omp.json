{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "white",
          "properties": {
            "postfix": "",
            "prefix": "",
            "wsl": "",
            "wsl_separator": ""
          },
          "style": "powerline",
          "type": "os"
        },
        {
          "foreground": "cyan",
          "properties": {
            "style": "full",
            "prefix": " \uF07C ",
            "home_icon": "~",
            "folder_separator_icon": "/"
          },
          "style": "plain",
          "type": "path"
        },
        {
          "foreground": "lightGreen",
          "properties": {
            "display_status": true,
            "postfix": "",
            "prefix": "",
            "ahead_color": "lightGreen",
            "behind_color": "green",
            "working_color": "red",
            "staging_color": "yellow",
            "local_changes_color": "yellow",
            "ahead_and_behind_color": "red",
            "color_background": false,
            "display_stash_count": true,
            "display_upstream_icon": true,
            "status_colors_enabled": true,
            "github_icon": " "
          },
          "style": "plain",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#68a063",
          "properties": {
            "display_mode": "files",
            "display_package_manager": true,
            "display_version": true,
            "npm_icon": "/npm",
            "postfix": "",
            "prefix": " ",
            "yarn_icon": "/yarn"
          },
          "style": "plain",
          "type": "node"
        },
        {
          "foreground": "#4063D8",
          "properties": {
            "display_mode": "files",
            "display_version": true,
            "postfix": "",
            "prefix": " "
          },
          "style": "plain",
          "type": "crystal"
        },
        {
          "foreground": "#DE3F24",
          "properties": {
            "display_mode": "files",
            "display_version": true,
            "postfix": "",
            "prefix": " "
          },
          "style": "plain",
          "type": "ruby"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#86865F",
          "properties": {
            "always_enabled": true,
            "prefix": "\uF252 "
          }
        },
        {
          "foreground": "#FED142",
          "properties": {
            "display_mode": "context",
            "display_version": true,
            "display_virtual_env": false,
            "postfix": "",
            "prefix": " "
          },
          "style": "plain",
          "type": "python"
        },
        {
          "foreground": "#558585",
          "style": "diamond",
          "type": "time",
          "trailing_diamond": "<#555556>─╮</>",
          "properties": {
            "prefix": "\uF017 "
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "lightGreen",
          "properties": {
            "always_enabled": true,
            "display_exit_code": false,
            "error_color": "red",
            "prefix": "$"
          },
          "style": "powerline",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "trailing_diamond": "<#555556>─╯</>",
          "properties": {
            "display_host": true
          }
        }
      ]
    }
  ],
  "final_space": false,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{ .Shell }} in {{ .Folder }}"
}
